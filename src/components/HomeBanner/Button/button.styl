.btn-container
  margin-top 30px
  display flex
  justify-content center

.main-cta, .secondary-cta
  font-size 14px
  text-transform uppercase
  border none
  min-width 224px
  padding 14px 0px
  box-shadow 0 5px 8px 0 rgba(0,0,0,0.14)
  border-radius 4px
  color #ffffff
  font-weight 600

.main-cta
  background #00BA66
  margin-right 23px

.secondary-cta
  background #ffffff
  color #007BDD

