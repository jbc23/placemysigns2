body
  font-family HelveticaNeue

ul
  list-style none
  display flex
  font-weight 600
  padding-left 0px
  justify-content flex-end

  li
    font-size 14px
    color #ABACAE

    a
      color #007BDD

    &:first-child
      font-size 15px
      color #373737
      letter-spacing -0.16px
      left 0px
      position absolute

      span
        color #ABACAE

  ul.social
    position relative

    li
      margin-left 16px

       &:first-child
        position relative !importantte

.main-container
  max-width 1100px
  margin 0 auto
  display block
  position relative



