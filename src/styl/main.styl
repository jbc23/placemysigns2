body
  font-family HelveticaNeue
  margin 0
  min-height 100%
  padding 0
  box-sizing border-box
  font-size 100%

.container-full-width
  width 100%
  border-bottom solid #E5E5E6 1px

.container-lg
  margin 0 auto
  max-width 1040px

/* Typography */

h1, h2, h3, h4, h5, h6
  margin 0px

h1, p
  color #fff

h1
  font-size 48px
  letter-spacing -0.48px

h2
  font-size 34px
  color #373737
  letter-spacing -1.42px

h3
  font-size 16px
  letter-spacing -0.2px
  line-height 18px

h4
  font-size 24px
  color #ABACAE
  letter-spacing -1px
  line-height 28px

h5
  font-size 24px
  color #646464
  letter-spacing -1px
  line-height 28px

h6
  font-size 16px
  color #ABACAE
  letter-spacing -0.67px
  line-height 28px

p
  font-size 18px
  letter-spacing -0.23px
  line-height 18px
